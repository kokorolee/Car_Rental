doctype html
html
  head
    title
      | Src
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  body
    nav.navbar.navbar-dark.sticky-top.bg-dark.flex-md-nowrap.p-0
      a.navbar-brand.col-sm-3.col-md-2.mr-0[href="https://getbootstrap.com/docs/4.0/examples/dashboard/#"]
        | CANVA
      input.form-control.form-control-dark.w-100[type="text" placeholder="Search" aria-label="Search"]
      ul.navbar-nav.px-3
        li.nav-item.text-nowrap
          - if admin_signed_in?
            li
              = link_to('Logout', destroy_admin_session_path, method: :delete)
          - else
            li
              = link_to('Login', new_admin_session_path)
    .container-fluid
      .row
        = render "layouts/sidebar", models: @models
        main.col-md-8.ml-sm-auto.col-lg-9.pt-3.px-4[role="main"]
          = yield
    script
      |  feather.replace()
