<%= form_with(model: driver, local: true) do |form| %>
  <% if driver.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(driver.errors.count, "error") %>
        prohibited this driver from being saved:</h2>

      <ul>
      <% driver.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :license_no %>
    <%= form.text_field :license_no %>
  </div>

  <div class="field">
    <%= form.label :class_license %>
    <%= form.text_field :class_license %>
  </div>

  <div class="field">
    <%= form.label :date_issue %>
    <%= form.date_select :date_issue %>
  </div>

  <div class="field">
    <%= form.label :date_expired %>
    <%= form.date_select :date_expired %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
